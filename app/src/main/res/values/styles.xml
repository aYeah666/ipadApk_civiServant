<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--禁止加载Preview Window-->
        <item name="android:windowDisablePreview">true</item>

    </style>
    <!--自定义dialog样式-->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--自定义dialog样式-->
    <style name="SMyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:backgroundDimAmount">0.3</item>-->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!--<item name="android:windowAnimationStyle">@style/menu_animation</item>-->
    </style>

    <style name="menu_animation">
        <item name="android:windowEnterAnimation">@anim/menu_appear</item>
        <item name="android:windowExitAnimation">@anim/menu_disappear</item>
    </style>

    <!--history_tv-->

    <style name="history_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--history_view-->
    <style name="history_view">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#D4D4D4</item>
    </style>
    <!---->
    <style name="item_history_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--自定义seekbarstyle-->
    <style name="CustomSeekbarStyle">
        <item name="android:maxHeight">6dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_bg</item>
        <item name="android:minHeight">3dp</item>

    </style>
    <!--编号显示样式-->
    <style name="bianhao_tv">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@mipmap/bg_bianhao</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--要素文字样式-->
    <style name="yaosu_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--seekbar-->
    <style name="seekbar">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:progressDrawable">@drawable/seekbar_bg</item>
        <item name="android:thumb">@drawable/seekbar_thumb_bg</item>
    </style>
    <!--addview-->
    <style name="addview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>


    </style>
    <!--设置要素显示文字-->

    <style name="factor_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#707475</item>

    </style>
    <!--扫一扫 二维码图片-->
    <style name="img_erweima">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@mipmap/icon_hasnot_saomiao</item>
    </style>
    <!--扫一扫 二维码提示文字-->
    <style name="tv_erweima">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">待扫描二维码"</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
