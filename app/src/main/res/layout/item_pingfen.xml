<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/frame_bg"
        android:paddingLeft="12dp"
        android:paddingRight="38dp">

        <TextView
            android:id="@+id/item_tv_biaohao"
            style="@style/bianhao_tv"
            android:text="01" />

        <TextView
            android:id="@+id/item_tv_factorname"
            style="@style/yaosu_tv"
            android:layout_toRightOf="@+id/item_tv_biaohao"
            android:text="综合分析最高分30分" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/item_seekbar"
                style="@style/seekbar" />

            <com.jiufang.interviewsystem.utils.AdderView
                android:id="@+id/item_adderview"
                style="@style/addview"
                android:layout_marginLeft="45dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
