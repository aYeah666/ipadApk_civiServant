<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_white_tishi"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="30dp">


        <EditText
            android:id="@+id/et_dialog_pwd"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_shape_edit_gray"
            android:hint="请输入密码"
            android:padding="12dp"
            android:maxLength="8"
            android:inputType="numberPassword"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_pwd_ok"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/btn_dialog_green"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_dialog_pwd_cancel"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:background="@mipmap/btn_dialog_gray"
                android:gravity="center"
                android:text="取消"
                android:textColor="#373737"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
